#!/usr/bin/env zsh

# Markdown to asciidoc converter
# Converts markdown files to asciidoc format using pandoc

if [[ $# -eq 0 ]]; then
    echo "Usage: markdown-to-adoc <markdown-file> [additional-pandoc-options]"
    echo "Converts markdown file to asciidoc with base header level 2 and no text wrapping"
    exit 1
fi

f="$1"
shift

if [[ ! -f "$f" ]]; then
    echo "Error: File '$f' not found"
    exit 1
fi

pandoc --shift-heading-level-by=1 -o "${f%.*}.adoc" --wrap=none "$f" "$@"